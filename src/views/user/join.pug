extends ../base

block content  
  if(errorMessage)
    p=errorMessage
  form(method="POST").user__form
    input(name="name" type="text", required, placeholder="name")
    input(name="email" type="email", required, placeholder="email")
    input(name="username" type="text", required, placeholder="username")
    input(name="password" type="password", required, placeholder="password")
    input(name="password2" type="password", required, placeholder="confirm password")
    input(name="location" type="text", required, placeholder="location")
    input(type="submit" value="join")
    br
    div.user__form__social
      a(href="/users/github/start") 
        i.fa-brands.fa-github
        span Continue with Github
  hr
  div   
    span Already have an account? 
