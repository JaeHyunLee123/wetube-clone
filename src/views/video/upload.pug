extends ../base.pug

block content 
  if errorMessage
    span=errorMessage
  form(method="POST" enctype="multipart/form-data")
    label(for="videoFile") Video file 
    input(name="videoFile" id="videoFile" type="file" accept="video/*" required)
    input(name="title" placeholder="Title" type="text", required, maxlength="80")
    input(name="description" placeholder="Description" type="text", required, minlength="20")
    input(name="hashtags" placeholder="Hashtags, seperated by comma." type="text", required)
    input(type="submit" value="Upload video")