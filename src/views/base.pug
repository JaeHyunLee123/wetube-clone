include mixins/message.pug

doctype html 
html(lang="en")
  head
    title #{pageTitle} | #{siteName}    
    link(rel="stylesheet" href="/assets/css/style.css")
    script(src="https://kit.fontawesome.com/f51143ee06.js" crossorigin="anonymous")
  body
    if messages.error   
      +message("error",messages.error)
    if messages.info 
      +message("info",messages.info)
    include partials/header.pug
    main  
      block content
    include partials/footer.pug
    include partials/loadingScreen.pug
    block scripts
      script(src="/assets/js/main.js")